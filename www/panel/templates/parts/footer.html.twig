				var type = $(this).attr("data-type");
				$.ajax({ 
					type: 'POST', 
					url: '/admin/delete.php', 
					data: { id:  id, type: type}, 
					dataType: 'json',
					success: function (data) { 
						$("tr[data-id='"+id+"'").remove();
